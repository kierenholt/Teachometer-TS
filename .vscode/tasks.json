{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "chrome_debug_session",
            "type": "shell",
            "command": "google-chrome --incognito --remote-debugging-port=9222 http://0.0.0.0:8000/index.html",
            "args": [],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "python_server",
            "type": "shell",
            "command": "python3 -m http.server",
            "args": [],
            "group": "build"
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        }
    ]
}